<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SignLanguageRecorder.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:p="clr-namespace:SignLanguageRecorder.Pages"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Record"
        ContentTemplate="{DataTemplate p:RecordPage}"
        Route="Record" />
    <ShellContent
        Title="Preferences"
        ContentTemplate="{DataTemplate p:PreferencesPage}"
        Route="Preferences" />
    <ShellContent
        Title="Debug"
        ContentTemplate="{DataTemplate p:DebugPage}"
        Route="Debug" />
</Shell>
