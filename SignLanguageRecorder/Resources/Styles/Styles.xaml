<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Light_OnSecondary}, Dark={StaticResource Dark_OnSecondary}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Light_Secondary}, Dark={StaticResource Dark_Secondary}}" />
    </Style>
</ResourceDictionary>